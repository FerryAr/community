#!/bin/sh -e

patch -p1 < wrong-member-name.patch

./configure \
    --prefix=/usr \
    --without-nettle \
    --without-openssl \
    --without-xml2 \
    --without-expat

make
make DESTDIR="$1" install

sed -i "s/iconv//" "$1/usr/lib/pkgconfig/libarchive.pc"

ln -s bsdcpio "$1/usr/bin/cpio"
ln -s bsdtar  "$1/usr/bin/tar"
